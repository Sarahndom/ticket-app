{% extends "base.twig" %}
{% block content %}
<div class="form-container">
  <form id="signup-form"> {# ID for JavaScript #}
    <h2 style="text-align: center; margin-bottom: 1.5rem;">Get Started</h2>

    <div class="form-group">
      <label for="email">Email</label>
      <input
        type="email"
        id="email" {# ID for JavaScript #}
        class="form-control"
        placeholder="your@email.com"
        required
      />
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <input
        type="password"
        id="password" {# ID for JavaScript #}
        class="form-control"
        placeholder="6+ characters"
        required
        minlength="6" {# Basic HTML validation #}
      />
    </div>

    <p id="error-message" class="error-inline"></p> {# Inline errors #}

    <button type="submit" class="btn btn-primary" style="width: 100%;">
      Create Account
    </button>

    <p style="margin-top: 1rem; text-align: center;">
      Already have an account? <a href="login.php">Login</a>
    </p>
  </form>
</div>
{% endblock %}